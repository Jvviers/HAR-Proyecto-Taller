---
interface Props {
  activityId: number;
  activityName: string;
  realDuration: number;
  predictedDuration: number;
  realWindows: number;
  predictedWindows: number;
}

const { activityId, activityName, realDuration, predictedDuration, realWindows, predictedWindows } = Astro.props;

const diff = predictedDuration - realDuration;
const diffClass = diff > 0 ? 'text-emerald-400' : diff < 0 ? 'text-red-400' : 'text-slate-400';
const diffSign = diff > 0 ? '+' : '';

const colors: Record<number, string> = {
  1: 'bg-green-500',
  2: 'bg-blue-500',
  3: 'bg-purple-500',
  4: 'bg-yellow-500',
  5: 'bg-red-500',
  6: 'bg-cyan-500',
  7: 'bg-pink-500',
  8: 'bg-orange-500',
  9: 'bg-lime-500',
  10: 'bg-teal-500',
  11: 'bg-rose-600',
  12: 'bg-indigo-500'
};

const bgColor = colors[activityId] || 'bg-gray-500';
---

<div class="bg-slate-800 rounded-xl p-4 border border-slate-700 hover:border-slate-600 transition-colors">
  <div class="flex items-start justify-between mb-3">
    <div class={`w-8 h-8 ${bgColor} rounded-lg flex items-center justify-center text-white font-bold text-sm`}>
      {activityId}
    </div>
    <span class={`${diffClass} text-sm font-medium`}>
      {diffSign}{diff.toFixed(1)}s
    </span>
  </div>
  
  <h3 class="text-white font-medium mb-2 text-sm leading-tight">
    {activityName}
  </h3>
  
  <div class="space-y-1 text-xs">
    <div class="flex justify-between">
      <span class="text-slate-400">Real:</span>
      <span class="text-white">{realDuration}s ({realWindows})</span>
    </div>
    <div class="flex justify-between">
      <span class="text-slate-400">Predicho:</span>
      <span class="text-white">{predictedDuration}s ({predictedWindows})</span>
    </div>
  </div>
</div>
